<?xml version="1.0" encoding="utf-8"?>

<org.mopcon.view.CheckableFrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="86dp"
            android:padding="4dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title" android:layout_gravity="left|top" android:textSize="18sp"
                    android:padding="8dp"
                    android:textColor="?android:attr/textColorPrimary" android:singleLine="true"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text" android:layout_gravity="left|bottom" android:textSize="14sp"
                    android:layout_marginLeft="8dp" android:padding="4dp"
                    android:textColor="?android:attr/textColorSecondary" android:singleLine="true"/>
        </LinearLayout>
        <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/imageView"/>
    </LinearLayout>
</org.mopcon.view.CheckableFrameLayout>